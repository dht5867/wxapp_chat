.card_frame{
  height: 190px;
}
.card_inside{
  height: 175px;
  width: 85%;
  margin:0 auto;
  margin-top: 5px;
}
.card_title{
  height: 15px;
  font-size: 10px;
}
.card_info{
  height: 160px;
}
.card_inner{
  height: 130px;
  border: 5px solid #EEEFF0;
  margin:0 auto;
  margin-top: 10px;
  background-color: #FDFEFF;
  border-radius:10px;
}
.card_left{
  width: 79%;
  float: left;
  height: 100%;
}
.card_right{
  width: 19%;
  float: left;
  height: 100%;
}
.avatar{
  width: 45px;
  height: 45px;
  float: left;
  margin-top: 15px;
  border-radius:3px;
}
.unread_num{
  margin-top: 5px;
  height: 10px;
  width: 10px;
  font-size: 10px;
  line-height: 10px;
  text-align: center;
  float: left;
  color:white;
  border: 1px solid red;
  border-radius:10px;
  background-color: red;
}
.nickname{
  margin-top: 15px;
  margin-left: 15px;
  font-size: 30px;
}
.main{
  background-color: #A4E36B;
  text-align: center;
}
.auth_button{
  width: 50%;
  height: 50px;
  margin: 0 auto;
  text-align: center;
}