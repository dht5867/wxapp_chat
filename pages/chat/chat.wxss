/* pages/chat/chat.wxss */
.main{
  background-color: #EBEBEB;
}
.show {
  height:85%;
  width: 100%;
}
.chat {
  height:15%;
  width: 100%;
  background-color:#FAFAFA;
}

/* 快速功能 */
.fast {
  height:35%;
  width: 100%;
}
.text {
  height:65%;
  width: 100%;
}
.quick {
  font-size: 13px;
  height: 20px;
  float: left;
  margin-top: 5px;
  margin-left: 10px;
}
.round {
  width: 70px;
  text-align: center;
  background-color:#298DF3;
  color: white;
  padding: 0 2px;
  border-radius:10px;
  margin-left: 15px;
}

/* 聊天控件 */
.left_frame {
  height:100%;
  width: 69%;
  float: left;
}
.right_frame {
  height:100%;
  float: left;
  width: 29%;
}
.chat_input {
  margin-left: 5%;
  margin-top: 5px;
  height:80%;
  width: 90%;
  border:1px solid #EBEBEB;
}
.emoji {
  height:70%;
  float: left;
  width: 40%;
  margin-top: 10px;
  margin-left: 5px;
}
.send {
  height:70%;
  float: left;
  width: 40%;
  margin-top: 10px;
  margin-left: 10px;
  background-color: #5ED859;
}

/* 消息框样式 */
.msg_frame {
  height:100%;
}
.msg_row{
  margin-bottom: 5px;
  margin-top: 10px;
}
.msg_time{
  text-align: center;
  font-size: 10px;
  margin-top: 10px;
}
.msg_info{
  min-height: 50px;
  margin-top: 10px;
}

/* 内容样式 */
.avatar{
  height: 35px;
  width: 35px;
  margin-top: 3px;
}
.content{
  background-color:#FFFFFF;
  margin-top: 9px;
  font-size: 15px;
  line-height: 30px;
  border-radius:5px;
  min-height: 30px;
  max-width:85%;
  word-break: break-all;
}
.content_message{
  padding: 0 8px;
}
.to_left{
  margin-left: 10px;
}
.to_right{
  margin-left: 10px;
}

/* 聊天框架 */
.avatar_left{
  width: 15%;
  float: left;
}
.content_left{
  width: 75%;
  float: left;
}
.avatar_right{
  width: 15%;
  float: right;
}
.content_right{
  width: 75%;
  float: right;
}

/* 表情相关 */
.emoji_frame{
  position:fixed;
  right:0;
  bottom:0;
  height: 270px;
  width:100%;
  background-color: white;
}
.shut_frame{
  height: 30px;
}
.emoji_block{
  height: 240px;
}
.shut_pic{
  float: right;
  width: 30px;
  height: 30px;
}
.emoji_one{
  width:10%;
  margin-top: 10px;
  height: 50px;
  float:left;
}
.emoji_pic{
  height: 30px;
  width: 30px;
  margin-left: 5px;
}